<%= form_with(model: file_record, local: true) do |form| %>
  <% if file_record.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(file_record.errors.count, "error") %> prohibited this file from being saved:</h2>
      <ul>
        <% file_record.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, required: true %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :file %>
    <%= form.file_field :file, required: true %>
  </div>

  <div class="actions">
    <%= form.submit 'Upload File', class: 'btn btn-primary' %>
  </div>
<% end %>