<%= form_with(model: file_record, local: true, html: { class: 'file-upload-form' }) do |form| %>
  <% if file_record.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(file_record.errors.count, "error") %> prohibited this file from being saved:</h2>
      <ul>
        <% file_record.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, required: true %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, rows: 4 %>
  </div>

  <div class="field">
    <%= form.label :file %>
    <div class="file-input-wrapper">
      <%= form.label :file, class: 'file-input-label' do %>
        <svg class="icon" width="20" height="20" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd"/>
        </svg>
        <span>Choose a file or drag it here</span>
      <% end %>
      <%= form.file_field :file, required: true %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit 'Upload File', class: 'btn btn-primary' %>
  </div>
<% end %>