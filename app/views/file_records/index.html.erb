<div class="container mt-4">
  <!-- Navigation Bar with Auth Links -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">File Upload System</a>
      <div class="d-flex">
        <% if user_signed_in? %>
          <span class="navbar-text me-3">
            Welcome, <%= current_user.email %>
          </span>
          <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-outline-danger" %>
        <% else %>
          <%= link_to "Login", new_user_session_path, class: "btn btn-outline-primary me-2" %>
          <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </nav>

  <h1>My Files</h1>

  <% if user_signed_in? %>
    <!-- Upload Button (only shown when logged in) -->
    <div class="mb-4">
      <%= link_to 'Upload New File', new_file_record_path, class: 'btn btn-primary' %>
    </div>

    <% if @file_records.any? %>
      <table class="table">
        <!-- Table content remains the same -->
        <thead>
          <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Uploaded</th>
            <th>File</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @file_records.each do |file_record| %>
            <tr>
              <td><%= file_record.title %></td>
              <td><%= file_record.description %></td>
              <td><%= time_ago_in_words(file_record.created_at) %> ago</td>
              <td>
                <%= link_to file_record.file.filename, rails_blob_path(file_record.file, disposition: 'attachment') %>
              </td>
              <td>
                <%= button_to 'Delete', file_record, method: :delete, 
                              data: { confirm: 'Are you sure?' }, 
                              class: 'btn btn-danger btn-sm' %>
              </td>

              <td>
                <%= button_to 'Share', share_file_record_path(file_record), 
                              method: :post, 
                              class: 'btn btn-info btn-sm mb-1' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="alert alert-info">
        <p>You haven't uploaded any files yet.</p>
        <%= link_to 'Upload your first file', new_file_record_path, class: 'btn btn-primary' %>
      </div>
    <% end %>
  <% else %>
    <div class="alert alert-warning">
      <h4>Please login to access your files</h4>
      <div class="mt-3">
        <%= link_to "Login", new_user_session_path, class: "btn btn-primary me-2" %>
        <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>